route:
  group_by: ['alertname']
  group_wait: 30s
  group_interval: 5m
  repeat_interval: 1h
  receiver: 'email'
receivers:
  - name: 'email'
    email_configs:
    - to: '{{ email_recepient }}'
      from: '{{ email_sender }}'
      smarthost: {{ email_smtp_server }}
      auth_username: '{{ email_auth_username }}'
      auth_identity: '{{ email_auth_identity }}'
      auth_password: '{{ email_auth_password }}'
inhibit_rules:
  - source_match:
      severity: 'critical'
    target_match:
      severity: 'warning'
    equal: ['alertname', 'dev', 'instance']
